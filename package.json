{
	"author": "luhmllo",
	"description": "Minimalism Meets Modularity for Effortless UI Development",
	"homepage": "https://uwc.vercel.app/",
	"license": "MIT",
	"main": "dist/ui/index.js",
	"name": "lilys",
	"type": "module",
	"version": "0.0.15-8",
	"browserslist": [
		"defaults",
		"not op_mini all"
	],
	"dependencies": {
		"@astrojs/check": "^0.7.0",
		"@astrojs/svelte": "^5.4.0",
		"@astrojs/vercel": "^7.6.0",
		"astro": "^4.9.0",
		"svelte": "^4.2.17",
		"typescript": "^5.4.5"
	},
	"devDependencies": {
		"@floating-ui/dom": "^1.6.5",
		"@webcomponents/template-shadowroot": "^0.2.1",
		"cssnano": "^6.1.2",
		"cssnano-preset-advanced": "^6.1.2",
		"eslint-plugin-lit": "^1.13.0",
		"eslint-plugin-wc": "^2.1.0",
		"lit": "^3.1.3",
		"postcss": "^8.4.38",
		"postcss-cli": "^11.0.0",
		"postcss-fail-on-warn": "^0.2.1",
		"postcss-import": "^16.1.0",
		"sass": "^1.77.2",
		"terser": "^5.30.3",
		"vite": "^5.2.9"
	},
	"exports": {
		"./styles": {
			"import": "./dist/styles/all.css",
			"require": "./dist/styles/all.css",
			"browser": "./dist/styles/all.css",
			"umd": "./dist/styles/all.css"
		},
		"./ui": {
			"import": "./dist/ui/index.js",
			"require": "./dist/ui/index.cjs",
			"browser": "./dist/ui/index.iife.js",
			"umd": "./dist/ui/index.umd.js"
		}
	},
	"files": [
		"dist/"
	],
	"keywords": [
		"agnostic",
		"css",
		"custom elements",
		"library",
		"ui",
		"web components",
		"minimal",
		"modular",
		"props"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/LUHMLLO/lilys.git"
	},
	"scripts": {
		"astro": "astro",
		"build": "pnpm check && pnpm gen:scss && pnpm gen:postcss && pnpm gen:lit && pnpm gen:astro",
		"build:css": "pnpm gen:scss && pnpm gen:postcss",
		"build:components": "pnpm gen:lit",
		"check": "tsc && astro check",
		"dev": "astro dev",
		"preview": "astro preview",
		"start": "astro dev",
		"gen:scss": "sass --color --no-source-map --stop-on-error --unicode --update ./src/lib/_exports/styles/sass/:./src/lib/_exports/styles/css/",
		"gen:postcss": "postcss ./src/lib/_exports/styles/css/*.css -d ./dist/styles/ --config ./.postcssrc",
		"gen:lit": "vite build --config vite.lib.prod.config.ts && vite build --config vite.lib.local.config.ts",
		"gen:astro": "astro build"
	}
}