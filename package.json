{
	"author": "luhmllo",
	"description": "Minimalism Meets Modularity for Effortless UI Development",
	"homepage": "https://uwc.vercel.app/",
	"license": "MIT",
	"main": "dist/ui/index.js",
	"name": "lilys",
	"type": "module",
	"version": "0.0.8-fieldtest",
	"browserslist": [
		"defaults",
		"not op_mini all"
	],
	"dependencies": {
		"@astrojs/check": "^0.5.10",
		"@astrojs/vercel": "^7.5.2",
		"astro": "^4.5.15",
		"typescript": "^5.4.3"
	},
	"devDependencies": {
		"@webcomponents/template-shadowroot": "^0.2.1",
		"cssnano": "^6.1.2",
		"cssnano-preset-advanced": "^6.1.2",
		"eslint-plugin-lit": "^1.11.0",
		"eslint-plugin-wc": "^2.0.4",
		"lit": "^3.1.2",
		"postcss": "^8.4.38",
		"postcss-cli": "^11.0.0",
		"postcss-fail-on-warn": "^0.2.1",
		"postcss-import": "^16.1.0",
		"sass": "^1.74.1",
		"terser": "^5.30.3",
		"vite": "^5.2.8"
	},
	"exports": {
		"./styles": {
			"import": "./dist/styles/all.css",
			"require": "./dist/styles/all.css",
			"browser": "./dist/styles/all.css",
			"umd": "./dist/styles/all.css"
		},
		"./ui": {
			"import": "./dist/ui/index.js",
			"require": "./dist/ui/index.cjs",
			"browser": "./dist/ui/index.iife.js",
			"umd": "./dist/ui/index.umd.js"
		}
	},
	"files": [
		"dist/"
	],
	"keywords": [
		"agnostic",
		"css",
		"custom elements",
		"library",
		"ui",
		"web components",
		"minimal",
		"modular",
		"props"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/LUHMLLO/lilys.git"
	},
	"scripts": {
		"astro": "astro",
		"build": "pnpm check && pnpm stage:1 && pnpm stage:2 && pnpm stage:3 && pnpm stage:4",
		"build:css": "pnpm stage:1 && pnpm stage:2",
		"build:components": "pnpm stage:3",
		"check": "tsc && astro check",
		"dev": "astro dev",
		"preview": "astro preview",
		"start": "astro dev",
		"stage:1": "sass --color --no-source-map --stop-on-error --unicode --update ./src/lib/_exports/styles/sass/:./src/lib/_exports/styles/css/",
		"stage:2": "postcss ./src/lib/_exports/styles/css/*.css -d ./dist/styles/ --config ./.postcssrc",
		"stage:3": "vite build --config vite.lib.prod.config.ts && vite build --config vite.lib.local.config.ts",
		"stage:4": "astro build"
	}
}