{
  "name": "brrr-components",
  "description": "Universal web components library made with Lit Element & Typescript",
  "version": "0.0.6",
  "main": "./src/main.ts",
  "type": "module",
  "files": [
    "dist/lib/index.cjs",
    "dist/lib/index.iife.js",
    "dist/lib/index.js",
    "dist/lib/index.umd.cjs",
    "index.html",
    "readme.md"
  ],
  "scripts": {
    "_build:demo": "tsc && vite build",
    "_build:lib": "tsc && vite build --config vite.lib.config.ts",

    "_publish": "pnpm build && pnpm version patch && pnpm publish",
    "_update": "pnpm update --interactive --latest",

    "dev": "vite",
    "build": "pnpm _build:demo && pnpm _build:lib",
    "preview": "vite preview"
  },
  "devDependencies": {
    "lit": "^3.0.2",
    "sass": "^1.69.5",
    "terser": "^5.24.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}