{
	"name": "lm-components",
	"description": "Framework Agnostic web components library made with Lit Element & Typescript",
	"version": "0.0.1-pre",
	"type": "module",
	"main": "./dist/lib/index.cjs",
	"module": "./dist/lib/index.js",
	"browser": "./dist/lib/index.iife.js",
	"files": [
		"dist/",
		"index.html",
		"readme.md"
	],
	"scripts": {
		"build": "pnpm build:lib && pnpm build:app",
		"build:app": "vite build --config vite.app.config.ts",
		"build:lib": "vite build --config vite.lib.config.ts",
		"check": "tsc",
		"dev": "vite",
		"preview": "vite preview --config vite.app.config.ts",
		"publish": "pnpm run build && pnpm version patch && pnpm publish && git push"
	},
	"devDependencies": {
		"browserslist": "^4.23.0",
		"lightningcss": "^1.24.1",
		"lit": "^3.0.2",
		"terser": "^5.29.2",
		"typescript": "^5.2.2",
		"vite": "^5.1.6"
	},
	"keywords": [
		"ui",
		"ux",
		"component library",
		"web components",
		"web-components",
		"javascript",
		"js",
		"typescript",
		"ts",
		"html5",
		"html",
		"lit-html",
		"lit-element",
		"LitElement",
		"Brrr",
		"BrrrComponents",
		"Brrr-Components",
		"Framework-Agnostic"
	]
}
