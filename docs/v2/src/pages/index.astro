---
import Layout from '../layouts/app.astro';

const elements = [
	'a',
	'article',
	'button',
	'details',
	'dialog',
	'input',
	'label',
	'select',
	'table',
	'textarea',
];

const experiments = [
	'canvas',
	'dribbble',
	'homeExploration',
	'invoice',
	'notionSidebar',
	'railFloatingDrawer',
	'saasNotification',
	'silklead',
	'suburban',
	'thrip',
	'tinkxo',
	'uasd',
	'whatsnew',
];
---

<Layout>
	<x-grid style='--gap: var(--nm); --cols: 2;'>
		<x-card style='background-color: var(--clr-primary); outline-offset: 2px;'>
			<h1>Lilycat</h1>
			<p>
				Powered by dead simple <code>--opinionated</code> CSS props and a mix of
				common convention rules for better DX &amp; while keeping styling minimal.
			</p>
		</x-card>

		<x-card style='outline-offset: 2px;'>
			<h2>Test Page</h2>
			<a href='/test' type='button'>Understand each element behaviour better</a>
		</x-card>

		<x-card style='outline-offset: 2px;'>
			<h2>Elements</h2>
			<x-grid style='--gap: var(--md); --cols: 4;'>
				{
					elements.map((path) => (
						<a href={'/elements/' + path}>
							<span>{path}</span>
							<i class='icon'>north_east</i>
						</a>
					))
				}
			</x-grid>
		</x-card>

		<x-card style='outline-offset: 2px;'>
			<h2>Experiments</h2>
			<x-grid style='--gap: var(--md); --cols: 4;'>
				{
					experiments.map((path) => (
						<a href={'/experiments/' + path}>
							<span>{path}</span>
							<i class='icon'>north_east</i>
						</a>
					))
				}
			</x-grid>
		</x-card>
	</x-grid>
</Layout>
