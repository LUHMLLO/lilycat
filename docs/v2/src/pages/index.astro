---
import Layout from '../layouts/html.astro';

const routes = [
	'a',
	'article',
	'button',
	'details',
	'dialog',
	'input',
	'label',
	'select',
	'table',
	'textarea',
];

const codepens = [
	'homeExploration',
	'notionSidebar',
	'railFloatingDrawer',
	'saasNotification',
	'suburban',
	'uasd',
	'xylo',
];
---

<Layout>
	<header>
		<h1>Lilycat</h1>
		<p>
			Powered by dead simple <pre>{`--opinionated`}</pre> CSS props and a mix of
			common convention rules for better DX &amp; while keeping styling minimal.
		</p>
	</header>

	<h2>Elements</h2>

	<x-grid style='--gap: var(--md); --cols: 4;'>
		{
			routes.map((path) => (
				<a href={'/el/' + path}>
					<span>{path}</span>
					<i class='icon'>north_east</i>
				</a>
			))
		}
	</x-grid>

	<h2>codepens</h2>
	<x-grid style='--gap: var(--md); --cols: 4;'>
		{
			codepens.map((path) => (
				<a href={'/codepens/' + path}>
					<span>{path}</span>
					<i class='icon'>north_east</i>
				</a>
			))
		}
	</x-grid>
</Layout>
