---
import '../../../../css/dist/all.css';
---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<meta name='description' content='lilys desing system and ui kit' />
		<meta
			name='viewport'
			content='width=device-width, initial-scale=1.0, viewport-fit=cover'
		/>
		<meta name='generator' content={Astro.generator} />

		<!-- <link rel='canonical' href={canonicalUrl} /> -->

		<link rel='icon' type='image/svg+xml' sizes='any' href='/logo.png' />

		<title>lilys</title>

		<link rel='stylesheet' href='/app.css' />
		<link rel='stylesheet' href='/utils.css' />

		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			rel='stylesheet'
			href='https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200'
		/>
		<link
			href='https://api.fontshare.com/v2/css?f[]=satoshi@1&display=swap'
			rel='stylesheet'
		/>

		<style>
			html {
				font-family: 'Satoshi', sans-serif;
			}
		</style>
	</head>
	<body>
		<div id='app'>
			<nav id='app__topbar'>
				<a href='/' style='margin-right: var(--md);'>
					<figure>
						<img src='/logo.png' alt='logo' />
					</figure>
					<span>Lilycat</span>
				</a>

				<button>
					<i class='icon'>menu</i>
				</button>
			</nav>
			<div id='app__content'>
				<slot />
			</div>
		</div>
		<script type='module' src='/dropdown.min.js' is:inline></script>
	</body>
</html>
