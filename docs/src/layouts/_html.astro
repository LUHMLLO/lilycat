---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	overrides?: string;
	scheme?: string;
	title?: string;
}

const { overrides = '', scheme = 'auto', title = 'LiLys' } = Astro.props;

const anim = {
	old: {
		name: 'fadeIn',
		duration: '0.2s',
		easing: 'linear',
		fillMode: 'forwards',
	},
	new: {
		name: 'fadeOut',
		duration: '0.3s',
		easing: 'linear',
		fillMode: 'backwards',
	},
};

const myFade = {
	forwards: anim,
	backwards: anim,
};
---

<!doctype html>
<html lang='en' ly-scheme={scheme}>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/icon.png' />

		<meta name='generator' content={Astro.generator} />

		<title>{title}</title>

		<link
			rel='stylesheet'
			:href={async () => await import('../../../lib/build/css/all.css')}
		/>
		<script is:inline type='module' src='/assets/vendors/lilys.js'></script>

		<link
			rel='stylesheet'
			href='https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200'
		/>

		<link
			rel='stylesheet'
			href='https://api.fontshare.com/css?f[]=satoshi&display=swap'
		/>
		<link
			rel='stylesheet'
			href='https://api.fontshare.com/css?f[]=general-sans&display=swap'
		/>
		<link
			rel='stylesheet'
			href='https://api.fontshare.com/css?f[]=clash-display&display=swap'
		/>
		<link
			rel='stylesheet'
			href='https://api.fontshare.com/css?f[]=synonym&display=swap'
		/>

		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			rel='stylesheet'
			href='https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100;0,9..40,200;0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;0,9..40,800;0,9..40,900;0,9..40,1000;1,9..40,100;1,9..40,200;1,9..40,300;1,9..40,400;1,9..40,500;1,9..40,600;1,9..40,700;1,9..40,800;1,9..40,900;1,9..40,1000&display=swap'
		/>

		<Fragment set:html={overrides} />

		<ViewTransitions />
	</head>
	<body transition:animate={myFade}>
		<slot />
	</body>
</html>
