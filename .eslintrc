{
	"extends": [
		"eslint:recommended",
		"plugin:wc/recommended",
		"plugin:lit/recommended",
		"@typescript-eslint/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module"
	},
	"plugins": ["lit", "@typescript-eslint"],
	"rules": {
		"lit/no-legacy-template-syntax": "error",
		"lit/no-template-arrow": "warn",
		"lit/attribute-has-boolean-value": "warn",
		"lit/property-no-constructor-initializer": "error",
		"@typescript-eslint/no-unused-vars": "error" // Example: Adding a TypeScript rule
	}
}
