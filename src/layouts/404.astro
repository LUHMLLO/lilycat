---
import CoreHTML from './_html.astro';
---

<CoreHTML title='Lilys - 404'>
  <slot />
</CoreHTML>

<style lang='css' is:global>
  ly-app {
    --bg: none;
  }

  ly-layer {
    --dot-bg: black;
    --dot-color: linear-gradient(90deg, rgb(255, 0, 0), rgb(246, 255, 0));
    --dot-size: 0.1rem;
    --dot-space: 1rem;

    background:
      linear-gradient(
          90deg,
          var(--dot-bg) calc(var(--dot-space) - var(--dot-size)),
          transparent 1%
        )
        center / var(--dot-space) var(--dot-space),
      linear-gradient(
          var(--dot-bg) calc(var(--dot-space) - var(--dot-size)),
          transparent 1%
        )
        center / var(--dot-space) var(--dot-space),
      var(--dot-color);

    /* animation: movebg 30s linear infinite; */
    animation: movebg 360ms linear infinite;
    scale: 3;
  }

  @keyframes movebg {
    100% {
      --dot-color: linear-gradient(90deg, rgb(186, 203, 206), rgb(255, 157, 0));
      rotate: 360deg;
    }
  }
</style>
