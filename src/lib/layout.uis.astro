---
import HTML_Layout from 'src/lib/layout.html.astro';

interface Props {
	className?: string;
	overrides?: string;
	scheme?: string;
}

const { className, overrides = '', scheme = 'auto' } = Astro.props;
---

<HTML_Layout title='Lilys - UIS' {scheme} {overrides}>
	<ly-layer stacked='under'></ly-layer>
	<ly-app tmpl='container' class={className}>
		<slot />
	</ly-app>
	<ly-layer stacked='over'></ly-layer>
</HTML_Layout>

<style lang='css' scoped>
	@layer props {
		:root {
			--baseFontFamily: 'General Sans', sans-serif;
		}
	}

	@layer astro {
		:global(html) {
			background-image: linear-gradient(
				0deg,
				var(--clr-background) 0%,
				var(--clr-text) 100%
			);
			place-content: center center;
		}

		ly-app {
			--bg: var(--clr-background);
			--radius: var(--scale-sm);

			border: solid var(--clr-primary);
			gap: 0;
			height: 96dvh;
			margin: auto;
			padding-block: var(--scale-5xl);
			width: 96dvw;

			& > :global(h1, h2, h3) {
				text-transform: capitalize;
			}
			& > :global(:where(h1, h2, h3) + p) {
				color: var(--clr-subtext);
			}
			& > :global(:not(:where(h1, h2, h3) + *)) {
				--spacing: inherit;
				margin-top: calc(var(--scale-5xl) * 0.75);
			}
		}
	}
</style>
