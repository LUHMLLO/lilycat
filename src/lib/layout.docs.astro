---
import HTML_Layout from './layout.html.astro';
import Header from './layout.docs.header.astro';

interface Props {
	className?: string;
	overrides?: string;
	scheme?: string;
}

const { className, overrides = '', scheme = 'auto' } = Astro.props;
---

<HTML_Layout title='Lilys' {scheme} {overrides}>
	<ly-layer stacked='under'></ly-layer>
	<ly-app tmpl='container' class={className}>
		<Header />
		<slot />
	</ly-app>
	<ly-layer stacked='over'></ly-layer>
</HTML_Layout>

<style lang='css'>
	@layer props {
		:root {
			--baseFontFamily: 'Clash Display', sans-serif;
		}
	}

	ly-app {
		scrollbar-width: 0;

		&::-webkit-scrollbar {
			display: none;
		}

		& > :global(:where(h1, h2, h3, h4, h5, h6)) {
			text-transform: capitalize;

			&:not(:first-child) {
				margin-top: var(--scale-5xl);
			}

			& :global(+ p) {
				color: var(--clr-subtext);
				margin-top: var(--scale-3xs);
			}
		}

		& > :global(:where(*):not(header, :where(h1, h2, h3, h4, h5, h6) + p)) {
			margin-top: var(--scale-nm);
		}

		& > :global(:not(footer):last-child) {
			margin-bottom: calc(var(--scale-5xl) * 2);
		}
	}
</style>
