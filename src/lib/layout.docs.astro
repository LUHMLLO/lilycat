---
import HTML_Layout from 'src/lib/layout.html.astro';

interface Props {
	className?: string;
}

const { className } = Astro.props;
---

<HTML_Layout title='Lilys'>
	<ly-layer stacked='under'></ly-layer>
	<ly-app layout='container' class={className}>
		<slot />
	</ly-app>
	<ly-layer stacked='over'></ly-layer>
</HTML_Layout>

<style lang='css' scoped>
	@layer props {
		:root {
			--baseFontFamily: 'General Sans', sans-serif;
		}
	}

	@layer astro {
		:where(ly-app) {
			& > :global(:where(h1, h2, h3, h4, h5, h6)) {
				margin-top: var(--scale-5xl);
			}
		}
	}
</style>
