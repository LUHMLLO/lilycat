---
import HTML_Layout from 'src/lib/layout.html.astro';

interface Props {
	className?: string;
	overrides?: string;
	scheme?: string;
}

const { className, overrides = '', scheme = 'auto' } = Astro.props;
---

<HTML_Layout title='Lilys' {scheme} {overrides}>
	<ly-layer stacked='under'></ly-layer>
	<ly-app tmpl='container' class={className}>
		<slot />
	</ly-app>
	<ly-layer stacked='over'></ly-layer>
</HTML_Layout>

<style lang='css'>
	@layer props {
		:root {
			--baseFontFamily: 'Clash Display', sans-serif;
		}
	}

	ly-app {
		row-gap: calc(var(--scale-5xl) * 1.5);

		& > :global(h1, h2, h3) {
			text-transform: capitalize;
		}
		& > :global(:where(h1, h2, h3) + p) {
			color: var(--clr-subtext);
		}
		& > :global(:where(h1, h2, h3):not(:first-child)) {
			margin-bottom: -3rem;
		}

		& > :global(:not(footer):last-child) {
			margin-bottom: calc(var(--scale-5xl) * 2);
		}
	}
</style>
