---
import Layout from 'src/lib/layout.docs.astro';
import Card from 'src/lib/components/docs.card.astro';
---

<Layout className='g-5xl py-5xl'>
	<!--  -->
	<ly-grid cols='4' class='g-sm py-5xl'>
		<Card Heading='Button with no icons'>
			<ly-group>
				<button>
					<span>button</span>
				</button>
			</ly-group>
		</Card>
		<Card Heading='Button with left icons'>
			<ly-group>
				<button>
					<ly-icon>add</ly-icon>
					<span>button</span>
				</button>
			</ly-group>
		</Card>
		<Card Heading='Button with right icons'>
			<ly-group>
				<button>
					<span>button</span>
					<ly-icon>add</ly-icon>
				</button>
			</ly-group>
		</Card>
		<Card Heading='Button with both icons'>
			<ly-group>
				<button>
					<ly-icon>add</ly-icon>
					<span>button</span>
					<ly-icon>add</ly-icon>
				</button>
			</ly-group>
		</Card>
	</ly-grid>
	<!--  -->
	<ly-grid cols='4' class='g-sm py-5xl'>
		<Card Heading='Link'>
			<a> link </a>
		</Card>
		<Card Heading='Details > Summary'>
			<details>
				<summary>
					<span>summary</span>
				</summary>
				details content . . .
			</details>
		</Card>
		<Card Heading='Dropdown > Summary'>
			<ly-dropdown>
				<summary slot='summary'>
					<span>Dropdown Summary</span>
				</summary>
				<ul>
					<li>sasda</li>
					<li>sasda</li>
					<li>sasda</li>
					<li>sasda</li>
					<li>sasda</li>
					<li>sasda</li>
					<li>sasda</li>
					<li>sasda</li>
					<li>sasda</li>
					<li>sasda</li>
				</ul>
			</ly-dropdown>
		</Card>
		<!--  -->
	</ly-grid>
	<!--  -->
	<ly-grid cols='4' class='g-sm py-5xl'>
		<Card Heading='Date'>
			<ly-field type='date'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Date / Time'>
			<ly-field type='datetime-local'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Time'>
			<ly-field type='time' caption='asdada' status='error'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Text Field [ Single Line ]'>
			<ly-field type='text'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Text Area [ Multi Line ]'>
			<ly-field>
				<textarea></textarea>
			</ly-field>
		</Card>
		<Card Heading='Email'>
			<ly-field type='email'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Tel / Phone Number'>
			<ly-field type='tel'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Number'>
			<ly-field type='number'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Number [ Currency ]'>
			<ly-field type='currency'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Number [ Decimal ]'>
			<ly-field type='decimal'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Toggle [ Checkbox ]'>
			<ly-check variant='checkbox'></ly-check>
		</Card>
		<Card Heading='Toggle [ Radiobox ]'>
			<ly-check variant='radio'></ly-check>
		</Card>
		<Card Heading='Toggle [ Switch ]'>
			<ly-check variant='switch'></ly-check>
		</Card>
		<Card Heading='Text [ URL ]'>
			<ly-field type='url'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Formula'>
			<ly-field type='formula'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='Percent'>
			<ly-field type='range'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='File Upload'>
			<ly-field type='file'>
				<input />
			</ly-field>
		</Card>
		<Card Heading='File Upload [ Preview ]'>
			<ly-field type='file'>
				<input />
			</ly-field>
		</Card>
	</ly-grid>
	<!--  -->
</Layout>
