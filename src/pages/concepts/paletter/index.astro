---
import CoreHTML from 'src/layouts/_html.astro';
import Module from './_lib/paletter.svelte';

const overrides = `
	<style>
		:root {
			--clr-accent: hsl(84, 100%, 64%);
			--clr-context: hsl(83, 46%, 22%);
		}
	</style>
`;
---

<CoreHTML scheme='dark' {overrides}>
	<Module client:only='svelte' />
</CoreHTML>

<style lang='css'>
	:root {
		--baseFontFamily: 'Satoshi', sans-serif;
	}
</style>
