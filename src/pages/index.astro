---
import Layout from 'src/lib/layout.base.astro';
---

<Layout>
	<header
		class='bg-debug-stripes g-nm place-items-center flex-col text-center m-auto w-100'>
		<h1>Lily's</h1>
		<p>Build UIs Simply. Anywhere.</p>
		<a href='/docs' class=''>
			<button> Discover </button>
		</a>
	</header>
</Layout>

<style lang='css'>
	header {
		--outWidth: calc(var(--scale-5xs) * 0.25);

		&::before {
			content: '';
			height: 100%;
			inset: 0;
			outline-color: var(--clr-debug);
			outline-offset: calc(var(--outWidth) * -0.5);
			outline-style: dashed;
			outline-width: var(--outWidth);
			position: absolute;
			width: 100%;
		}

		& > * {
			background-color: var(--clr-background);
			place-content: center center;
			place-items: center center;
			text-align: center;
			width: 100%;

			&::before {
				content: '';
				height: 100%;
				inset: 0 50%;
				outline-color: var(--clr-debug);
				outline-offset: calc(var(--outWidth) * -0.5);
				outline-style: dashed;
				outline-width: var(--outWidth);
				position: absolute;
				translate: -50% 0%;
				width: 100dvw;
			}
		}
	}
</style>
