---
import Layout from 'src/lib/layout.docs.astro';
import DocsArticle from 'src/lib/components/docs.article.astro';

const articles = [
	{
		heading: 'Buttons',
		subheading: 'a - button - summary',
		description: '',
		path: '/docs/buttons',
	},
	{
		heading: 'Fields',
		subheading: 'input - select - textarea',
		description: '',
		path: '/docs/fields',
	},
	{
		heading: 'Layouts',
		subheading: 'flex - grid - group',
		description: '',
		path: '/docs/fields',
	},
];
---

<Layout className='gy-sm'>
	<h1>Lily's</h1>
	<p>An opinionated props-powered CSS x Web Components Kit</p>
	<figure>
		<img
			src='https://cdn.dribbble.com/userupload/12190560/file/original-d6d2027a27aa630f756ce2888a6e32f5.jpg'
			alt='banner'
			style='aspect-ratio: 20/10;'
		/>
	</figure>

	<h2>Components</h2>
	<ly-slider class='g-5xl pb-5xl' ignore-container contain-children>
		{
			articles.map(({ heading, subheading, description, path }) => (
				<DocsArticle {heading} {subheading} {description} {path} />
			))
		}
	</ly-slider>

	<footer class='bg-primary g-sm py-5xl' ignore-container contain-children>
		<h2>Know More</h2>
		<p>
			Explore modern UI solutions, available within lily's collection of web
			components &amp; css framework, to help you build simply beautiful user
			experiences.
		</p>
		<a href='#'>Github</a>
	</footer>
</Layout>
