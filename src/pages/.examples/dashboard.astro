---
import Layout from 'src/layouts/docs.astro';
---

<Layout scheme='dark'>
	<ly-flex axis='x'>
		<a href='#' class='clr-inherit'>
			<icon class='bg-text clr-subtext'> layers </icon>
			<h6>Discovery</h6>
		</a>
	</ly-flex>
	<ly-flex axis='x' class='g-5xs'>
		<button class='__outline'>
			<icon class='bg-tertiary'> auto_awesome_mosaic </icon>
			<span>Layout</span>
		</button>
		<button class='__outline'>
			<icon class='bg-tertiary'> looks </icon>
			<span>Customizing</span>
		</button>
		<button class='__outline'>
			<icon class='bg-tertiary'> campaign </icon>
			<span>Report Details</span>
		</button>
	</ly-flex>
	<ly-grid tmpl='3' class='g-sm'>
		<ly-flex axis='y' class='g-sm'>
			<ly-group class='g-sm p-sm outln outln-primary radius-3xs'>
				<header class='align-end[items] flex flex-row place-between'>
					<label>Visualization</label>
					<button>
						<icon> add </icon>
					</button>
				</header>
				<ly-flex class='g-sm wrap'>
					<button class='__outline'>
						<icon class='xl'> data_exploration </icon>
					</button>
					<button class='__outline'>
						<icon class='xl outlined'> database </icon>
					</button>
					<button class='__outline'>
						<icon class='xl outlined'> function </icon>
					</button>
					<button class='__outline'>
						<icon class='xl outlined'> timeline </icon>
					</button>
					<button class='__outline'>
						<icon class='xl outlined'> stacked_line_chart </icon>
					</button>
					<button class='__outline'>
						<icon class='xl outlined'> bubble_chart </icon>
					</button>
					<button class='__outline'>
						<icon class='xl outlined'> pie_chart </icon>
					</button>
					<button class='__outline'>
						<icon class='xl outlined'> donut_large </icon>
					</button>
				</ly-flex>
			</ly-group>

			<ly-group class='g-sm p-sm outln outln-primary radius-3xs'>
				<header class='align-end[items] flex flex-row place-between'>
					<label>Fields</label>
					<ly-flex axis='x' class='place-end[items]'>
						<button>
							<icon> search </icon>
						</button>
						<button>
							<icon> instant_mix </icon>
						</button>
					</ly-flex>
				</header>
				<ly-slider axis='y' class='g-5xs h-100'>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Account Name</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Billing City</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Billing State</span>
						<icon class='bg-primary'> text_fields </icon>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Forecast Category</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Industry</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Lead Source</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Opportunity Name</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Owner Role</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> tag </icon>
						<span>Cast</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> tag </icon>
						<span>Amount</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> tag </icon>
						<span>Name</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> calendar_month </icon>
						<span>Close Date</span>
					</button>
					<button class='__outline'>
						<icon class='bg-primary'> calendar_month </icon>
						<span>Created Date</span>
					</button>
				</ly-slider>
			</ly-group>
		</ly-flex>
		<ly-flex axis='y' class='g-sm'>
			<ly-group class='g-sm p-sm outln outln-primary radius-3xs'>
				<header class='align-end[items] flex flex-row place-between'>
					<label>Color Stack</label>
				</header>
				<ly-group class='g-5xs place-center[items]'>
					<button class='__outline'>
						<icon> add </icon>
					</button>
					<small>Drop Field Here</small>
				</ly-group>
				<ly-slider class='h-100'> </ly-slider>
			</ly-group>

			<ly-group class='g-sm p-sm outln outln-primary radius-3xs'>
				<header class='align-end[items] flex flex-row place-between'>
					<label>Stages</label>
				</header>
				<ly-group class='g-5xs place-center[items]'>
					<button class='__outline'>
						<icon> add </icon>
					</button>
					<small>Drop Field Here</small>
				</ly-group>
				<ly-slider class='h-100'> </ly-slider>
			</ly-group>

			<ly-group class='g-sm p-sm outln outln-primary radius-3xs'>
				<header class='align-end[items] flex flex-row place-between'>
					<label>Metrics</label>
					<button>
						<icon> add </icon>
					</button>
				</header>
				<ly-group class='g-5xs place-center[items]'>
					<button class='__outline'>
						<icon> add </icon>
					</button>
					<small>Drop Field Here</small>
				</ly-group>
				<ly-slider axis='y' class='h-100'>
					<button class='__outline'>
						<icon class='bg-primary'> text_fields </icon>
						<span>Opportunity</span>
					</button>
				</ly-slider>
			</ly-group>
		</ly-flex>

		<ly-group class='g-sm p-sm outln outln-primary radius-3xs'>
			<header class='align-end[items] flex flex-row place-between'>
				<header>
					<label>Opportunity ID</label>
				</header>
				<div class='container'></div>
			</header>
		</ly-group>
	</ly-grid>
</Layout>

<style lang='css'>
	:global(ly-app) {
		& > *:first-child {
			margin-top: 0;
		}
	}
</style>
