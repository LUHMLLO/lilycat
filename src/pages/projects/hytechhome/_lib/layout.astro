---
import Layout_HTML from 'src/lib/layout.html.astro';
import Layer_Overlay from './layers/layer.overlay.astro';
import Layer_Underlay from './layers/layer.underlay.astro';

import Banner from './components/banner.astro';
import Appbar from './components/appbar.astro';
import Hero from './components/hero.astro';
---

<Layout_HTML title='Hytech Home'>
	<Layer_Overlay />
	<ly-app>
		<Banner />
		<Appbar />
		<Hero />
		<slot />
	</ly-app>
	<Layer_Underlay />
</Layout_HTML>

<style lang='css'>
	.layer {
		inset: 0;
		position: fixed;
	}
</style>
