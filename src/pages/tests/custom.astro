---

<Layout title='Lilys'>
	<ly-app layout='default' class='g-5xl p-5xl'>
		<section class='grid cols-12 g-sm place-items-stretch'>
			{
				iconNames
					.sort(() => Math.random() - 0.5)
					.slice(0, iconNames.length / 4.25)
					.map((icon, index) => (
						<button class='place-center h-max-content p-5xl w-100'>
							<ly-icon solid={index % 2 === 0}>{icon}</ly-icon>
						</button>
					))
			}
		</section>

		<section class='flex-row place-space-between wrap'>
			<ly-radio label='Radio 1 of Group 1' group='radio-group-1'>
				<input type='text' name='' id='' />
			</ly-radio>
			<ly-radio label='Radio 2 of Group 1' group='radio-group-1'>
				<textarea name='' id='' cols='30' rows='10'></textarea>
			</ly-radio>
			<ly-radio label='Radio 1 of Group 2' group='radio-group-2'> </ly-radio>
			<ly-radio label='Radio 1 of Group 2' group='radio-group-2'> </ly-radio>
		</section>

		<section class='grid cols-2 g-sm justify-space-between wrap'>
			<ly-col class='place-items-center'>
				<pre style='font-size: var(--scale-5xs)'>--scale-5xs</pre>
				<pre style='font-size: var(--scale-4xs)'>--scale-4xs</pre>
				<pre style='font-size: var(--scale-3xs)'>--scale-3xs</pre>
