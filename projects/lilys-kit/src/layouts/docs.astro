---
import CoreHTML from './_html.astro';
import Header from 'src/components/header.astro';
import Footer from 'src/components/footer.astro';

interface Props {
	className?: string;
	overrides?: string;
	scheme?: string;
}

const { className, overrides = '', scheme = 'auto' } = Astro.props;
---

<CoreHTML title='Lilys' {scheme} {overrides}>
	<ly-app tmpl='container' class={className}>
		<Header />
		<slot />
		<Footer />
	</ly-app>
</CoreHTML>

<style lang='css' is:global>
	@layer props {
		:root {
			--baseFontFamily: 'Clash Display', sans-serif;
		}
	}

	ly-app {
		row-gap: var(--scale-5xl);
		scrollbar-width: 0;

		&::-webkit-scrollbar {
			display: none;
		}

		& > :where(h1, h2, h3, h4, h5, h6) {
			text-transform: capitalize;

			&:not(:first-child) {
				margin-top: var(--scale-5xl);
				margin-bottom: calc(var(--scale-5xl) * -0.75);
			}

			& + p {
				color: var(--clr-subtext);
			}
		}
	}
</style>
